{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "name": "gql.tada/ts-plugin",
                "schemas": [
                    {
                        "name": "db",
                        "schema": "./generated/db.graphql",
                        "tadaOutputLocation": "./generated/db-graphql-env.d.ts",
                        "noIntrospection": true
                    },
                ]
            }
        ]
    }
}